<%= form_for(@section, :html => {class: "form-group", role: "form"}, url: create_section_path) do |f| %>
  <%= f.hidden_field :page_id, value: params[:page_id] %>
  <div class="form-group">
      <%= f.label :header %>
      <%= f.text_field :header, autofocus: true, class: 'form-control' %>  
  </div>
  <div class="form-group">
      <%= f.label :subheader %>
      <%= f.text_field :subheader, autofocus: true, class: 'form-control' %>    
  </div>
  <div class="form-group">
      <label class="control-label">Position</label>
      <%= select_tag :position, "<option>1</option><option>2</option><option>3</option><option>4</option><option>5</option><option>6</option>".html_safe, class: 'form-control' %>  
  </div>
  <div class="form-group">
      <label class="control-label">Kategorie</label>
      <%= select_tag :category, "<option>Option 1</option><option>Option 2</option><option>Option 3</option><option>Option 4</option><option>Option 5</option><option>Option 6</option>".html_safe, class: 'form-control' %>  
  </div>
  <div class="form-group">
      <label class="control-label">Spalten</label>
      <%= select_tag :column, "<option>1</option><option>2</option><option>3</option><option>4</option>".html_safe, class: 'form-control' %>   
  </div>
  <%= f.submit "Abschnitt erstellen", class: 'btn btn-primary'%>
<% end %>
