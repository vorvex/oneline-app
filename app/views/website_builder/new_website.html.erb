<%= form_for(@website, :html => {class: "form-group", role: "form"}, url: create_website_path) do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <div class="form-group">
    <%= f.label :url %>
    <%= f.text_field :url, autofocus: true, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, autofocus: true, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, autofocus: true, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :site_name %>
    <%= f.text_field :site_name, autofocus: true, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :layout %>
    <%= f.text_field :layout, autofocus: true, class: 'form-control' %>
  </div>
  <div class="form-group">
      <label class="control-label">Header</label>
      <%= select_tag :header, "<option>Option 1</option><option>Option 2</option><option>Option 3</option><option>Option 4</option><option>Option 5</option><option>Option 6</option>".html_safe, class: 'form-control' %>  
  </div>
  <div class="form-group">
      <label class="control-label">Footer</label>
      <%= select_tag :footer, "<option>Option 1</option><option>Option 2</option><option>Option 3</option><option>Option 4</option><option>Option 5</option><option>Option 6</option>".html_safe, class: 'form-control' %>  
  </div>
  <%= f.submit "Webseite erstellen", class: 'btn btn-primary'%>
<% end %>
