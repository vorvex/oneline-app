<div class="o-page__sidebar js-page-sidebar">
    <div class="c-sidebar">
        <a class="c-sidebar__brand" href="#">
            OnelineApp
        </a>

        <h4 class="c-sidebar__title">Meine Webseite</h4>
        <ul class="c-sidebar__list">

            <li class="c-sidebar__item">
                <a class="c-sidebar__link <%= if @active == 'Index' then 'is-active' end %>" href="/webseite">
                    <i class="fa fa-home u-mr-xsmall"></i>Übersicht
                </a>
            </li>
            <li class="c-sidebar__item has-submenu">
                <a class="c-sidebar__link collapsed" data-toggle="collapse" href="#sidebar-submenu1" aria-expanded="false" aria-controls="sidebar-submenu">
                    <i class="fa fa-caret-square-o-down u-mr-xsmall"></i>Seiten
                </a>
                <ul class="c-sidebar__submenu collapse" id="sidebar-submenu1" style="">
                  <% current_user.website.pages.each do |page| %>  
                  <li><%= link_to page.name, page_path(page.id), class:'c-sidebar__link' %></li>
                  <% end %>
                </ul>
            </li>
            
            <li class="c-sidebar__item">
                <a class="c-sidebar__link" href="/webseite/seite/neu">
                    <i class="fa fa-plus u-mr-xsmall"></i>Neue Seite
                </a>
            </li>

            <li class="c-sidebar__item has-submenu">
                <a class="c-sidebar__link collapsed" data-toggle="collapse" href="#sidebar-submenu2" aria-expanded="false" aria-controls="sidebar-submenu">
                    <i class="fa fa-caret-square-o-down u-mr-xsmall"></i>Sonderseiten
                </a>
                <ul class="c-sidebar__submenu collapse" id="sidebar-submenu2" style=""> 
                  <li><a class='c-sidebar__link'>Galerie</a></li>
                  <li><a class='c-sidebar__link'>Datenschutz</a></li>
                  <li><a class='c-sidebar__link'>Impressum</a></li>
                </ul>
            </li>
          
            <li class="c-sidebar__item has-submenu">
                <a class="c-sidebar__link collapsed" data-toggle="collapse" href="#sidebar-submenu3" aria-expanded="false" aria-controls="sidebar-submenu">
                    <i class="fa fa-caret-square-o-down u-mr-xsmall"></i>Blogeinträge
                </a>
                <ul class="c-sidebar__submenu collapse" id="sidebar-submenu3" style=""> 
                  <li><a class='c-sidebar__link'>Example 1</a></li>
                  <li><a class='c-sidebar__link'>Example 2</a></li>
                  <li><a class='c-sidebar__link'>Neuer Eintrag</a></li>
                </ul>
            </li>          

            <li class="c-sidebar__item">
                <a class="c-sidebar__link" href="/webseite/einstellungen">
                    <i class="fa fa-cog u-mr-xsmall"></i> Website Einstellungen
                </a>
            </li>
        <h4 class="c-sidebar__title">Formulare</h4>
        <ul class="c-sidebar__list">
          
            <li class="c-sidebar__item has-submenu">
                <a class="c-sidebar__link collapsed" data-toggle="collapse" href="#sidebar-submenu4" aria-expanded="false" aria-controls="sidebar-submenu">
                    <i class="fa fa-caret-square-o-down u-mr-xsmall"></i>Download
                </a>
                <ul class="c-sidebar__submenu collapse" id="sidebar-submenu4" style="">
                  <% FormularCreator.all.each do |formular| %>
                    <li><%= link_to formular.name, formular_path(formular.name + '.pdf'), class:'c-sidebar__link' %></li>
                  <% end %>
                </ul>
            </li>
        </ul>

        <h4 class="c-sidebar__title">Konto bearbeiten</h4>
        <ul class="c-sidebar__list">

           <li class="c-sidebar__item">
                <a class="c-sidebar__link <%= if @active == 'Settings' then 'is-active' end %>" href="/dashboard/settings">
                    <i class="fa fa-cog u-mr-xsmall"></i>Einstellungen
                </a>
            </li>         
            
           <li class="c-sidebar__item">
                <a class="c-sidebar__link <%= if @active == 'Support' then 'is-active' end %>" href="/dashboard/support">
                    <i class="far fa-life-ring u-mr-xsmall"></i>Support
                </a>
            </li>
          
            <li class="c-sidebar__item">
              <a class="c-sidebar__link" href="/impressum">
                <i class="fa fa-question-circle u-mr-xsmall"></i> Impressum
              </a>
            </li>
          </ul>
           <h4 class="c-sidebar__title"></h4>
          <ul class="c-sidebar__list">  
            <li class="c-sidebar__item">
                <%= link_to destroy_user_session_path, method: :delete, class: "c-sidebar__link" do %>
                    <i class="fa fa-arrow-left u-mr-xsmall"></i> Abmelden
                <% end %>
            </li>
        
        </ul>
    </div> <!-- // .c-sidebar -->

</div> <!-- // .o-page__sidebar -->