<!-- Modal -->
<div class="modal fade" id="editComponent<%= component.id %>" tabindex="-1" role="dialog" aria-labelledby="editComponentLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= form_for(component, :html => {class: "form-group", role: "form"}, url: update_component_path(component.id), remote: true) do |f| %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="editComponentLabel">Element bearbeiten</h4>
        </div>
        <div class="modal-body">
          <%= f.hidden_field :category, value: section.column_type(position) %>
          <% if section.column_type(position) == "complete" %>
            <div class="form-group">
              <%= f.label :heading %>
              <%= f.text_field :heading, autofocus: true, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :subheading %>
              <%= f.text_field :subheading, autofocus: true, class: 'form-control' %>
            </div>
          <% end %>
          <% if section.column_type(position) != "img"  %>
           <div class="form-group">
            <%= f.text_area :content, class: 'text_editor'%>
           </div>
          <% elsif section.column_type(position) == "img" %>
           <div class="form-group">
              <%= f.label "Logo" %>
              <%= f.file_field :logo, autofocus: true, class: 'form-control' %>
            </div>
          <% end %>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">SchlieÃŸen</button>
          <%= f.submit "Abschnitt erstellen", class: 'btn btn-primary'%>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>