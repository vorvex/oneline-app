<%= form_for(@hero, :html => {class: "form-group", role: "form"}, url: create_hero_path) do |f| %>
  <%= f.hidden_field :page_id, value: @page.id %>
  <div style="margin-bottom: 20px;">
        <h4>Slides</h4>
        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" class="active">
              <a data-toggle="tab" href="#slide1" role="tab" aria-controls="slide1" >Slide 1</a>
            </li>
            <li role="presentation">
              <a data-toggle="tab" href="#slide2" role="tab" aria-controls="slide2" >Slide 2</a>
