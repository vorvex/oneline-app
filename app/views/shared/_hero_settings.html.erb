            </li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="slide1">
          <div class="form-group">
            <%= f.label 'Überschrift', style: 'margin-top: 20px;' %>
            <%= f.text_field :header_slide_one, autofocus: true, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label 'Zwischenüberschrift' %>
            <%= f.text_field :subheader_slide_one, autofocus: true, class: 'form-control' %>
