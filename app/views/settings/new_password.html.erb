<h1>
  Herzlich Willkommen. Bitte erstellen Sie ein Neues Passwort.
</h1>
<%= form_for(@user, :html => {class: "form-group", role: "form"}, url: create_password_path) do |f| %>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, autofocus: true, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autofocus: true, class: 'form-control' %>
  </div>
  <%= f.submit "Fortfahren", class: 'btn btn-primary'%>
<% end %>