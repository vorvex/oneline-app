    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-timepicker/1.2.17/jquery.timepicker.min.css"/>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDJn3S362p2F-Fe8OUJi4uMvDBqESmA7ds&libraries=places"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-timepicker/1.2.17/jquery.timepicker.min.js"></script>
  </head>
  <body class="<%= 'o-page' unless !@websitebuilder %>">
        <!--[if lte IE 9]>
            <p class="browserupgrade">Sie verwenden einen <strong>veralteten</strong> Browser. Bitte <a href="http://browsehappy.com/">updaten Sie Ihre Version</a> um die Sicherheit zu verbessern</p>
        <![endif]-->
        <% if @websitebuilder %>
        <main class='o-page__content'>  
            <div class="container" >
              <%= bootstrap_flash %>
              <%= yield %>
            </div>  
        </main>
        <% else %>
          <%= bootstrap_flash %>
          <%= yield %>
        <% end %>
    <script>
      

    </script>
  </body>
</html>
