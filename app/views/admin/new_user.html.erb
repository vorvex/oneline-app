<%= form_for(@user, :html => {class: "form-group", role: "form"}, url: create_user_path) do |f| %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, autofocus: true, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.text_field :password, autofocus: true, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.text_field :password_confirmation, autofocus: true, class: 'form-control' %>
  </div>
  <%= f.submit "Akkount anlegen", class: 'btn btn-primary'%>
<% end %>